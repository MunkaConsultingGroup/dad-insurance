generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
}

model Lead {
  id             String   @id @default(cuid())
  createdAt      DateTime @default(now())

  age            Int
  gender         String
  smokerStatus   String
  healthClass    String
  coverageAmount Int
  termLength     Int

  ratesShown     String   // JSON string of CarrierQuote[]

  firstName      String
  email          String
  phone          String
  zip            String

  consentGiven   Boolean
  consentText    String
  consentAt      DateTime
  ipAddress      String

  webhookSent    Boolean   @default(false)
  webhookSentAt  DateTime?
  buyerId        String?
}
